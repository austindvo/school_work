//package client;

import java.io.BufferedInputStream;
import java.io.DataInputStream;
import java.io.InputStreamReader;
import java.io.BufferedReader;
import java.io.DataOutputStream;
import java.io.IOException;
import java.net.*;
import java.util.Scanner;

@SuppressWarnings("unused")
public class Client {
	
	private static Socket socket			= null;
	private static DataOutputStream output	= null;
	private static DataInputStream input	= null;
	//private static BufferedReader input		= null;
	private static String line				= "";
	
	
	public Client() {
		try {
			
			Scanner scanner = new Scanner(System.in);
			
			try {
				
			    //connect to locahost on port 5000
				socket = new Socket("127.0.0.1", 5000);
				//Print that the Client has connected to the server successfully
				System.out.println("Connected to server");
				
				//takes the input from the terminal
				//input = new BufferedReader(new InputStreamReader(socket.getInputStream()));
				input = new DataInputStream(new BufferedInputStream(socket.getInputStream()))
				//sends output to the socket
				output = new DataOutputStream(socket.getOutputStream());
				
			} catch(UnknownHostException u) {
	            System.out.println(u);
	        }
	          catch(IOException i) {
	            System.out.println(i);
	        }
			
			
			System.out.println(">Enter your Name:");
			
			
			line = scanner.nextLine();

			System.out.println("Hello, " + line);
						
			output.writeUTF("User " + line + " has entered the channel");

			
			while(!line.equals("goodbye")) {
				//try {
					line = input.readUTF();
					System.out.println(line);
//					line = scanner.nextLine();
//					output.writeUTF(line);
				//} catch(IOException a) {
				//	System.out.println(a);
				//}
			}
			
			input.close();
			output.close();
			socket.close();
			scanner.close();
			
		} catch (IOException e) {
			System.err.println("Fatal Connection Error"); //if it can't print this message and the stack
			e.printStackTrace();
		}
	}
	
	public static void main(String args[]) {
		Client client = new Client();
	}
}
